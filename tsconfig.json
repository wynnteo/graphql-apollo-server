{
  "compilerOptions": {
    "module": "Node16",              
    "target": "ESNext",             
    "moduleResolution": "node16",    
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "resolveJsonModule": true,     
    "strict": true,                
    "outDir": "./dist",           
    "allowJs": true,       
    "jsx": "react",       
    "sourceMap": true   
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
